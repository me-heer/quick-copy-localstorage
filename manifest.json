{
  "manifest_version": 3,
  "name": "Quick Copy LocalStorage",
  "version": "1.0.0",
  "description": "Quickly copy any localStorage item with one click",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "*://*.senpiper.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Copy LocalStorage"
  },
  "content_scripts": [
    {
      "matches": ["*://*.senpiper.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 